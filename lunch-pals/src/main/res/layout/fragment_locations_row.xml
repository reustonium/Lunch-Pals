<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:background="@color/card_bg">
    <TextView
        android:id="@+id/frag_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Wegmans"/>
    <TextView
        android:id="@+id/frag_location_cuisine"
        android:layout_below="@id/frag_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/frag_location_thumbDown"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_thumbdownoff"
        android:adjustViewBounds="true"/>
    <ImageView
        android:id="@+id/frag_location_thumbUp"
        android:layout_toLeftOf="@id/frag_location_thumbDown"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_thumbupoff"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/frag_location_score"
        android:layout_toLeftOf="@id/frag_location_thumbUp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="5"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"/>

</RelativeLayout>
